/* components/navigation-bar/navigation-bar.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
}
.nav-main {
  width: 100%;
  height: 100%;
  position: relative;
}
.capsule-box {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
}

.capsule {
  box-sizing: border-box;
  padding: 0 2px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 32px;
  display: flex;
  align-items: center;
}
.capsule > view {
  width: 44px;
  text-align: center;
}
.capsule > view:nth-child(2) {
  border-left: 1px solid #F0F0F0;  
}
.capsule image {
  width: 16px;
  height: 16px;
}
.title {
  color: white;
  position: absolute;
  top: 6px;
  left: 104px;
  right: 104px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}



