/* components/navigation-bar/navigation-bar.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 999;
}

.nav-main {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
}

.title {
  color: white;
  position: absolute;
  top: 0;
  width: 100%;
  height: 32px;
  line-height: 32px;
  font-size: 14px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.capsule {
  position: relative;
  box-sizing: border-box;
  height: 32px;
  border-radius: 32px;
  border: 1px solid rgba(127, 127, 127, .1);
  background-color: rgba(255, 255, 255, .6);
  display: inline-flex;
  align-items: center;
  overflow: hidden;
}

.capsule-btn {
  width: 44px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.capsule-btn:active {
  background-color: rgba(0, 0, 0, .3);
}

.capsule-split {
  height: 14px;
  width: 1px;
  background-color: #DDDDDD;
}

.capsule-btn-img {
  width: 14px;
  height: 14px;
}