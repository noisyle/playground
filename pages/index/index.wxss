/**index.wxss**/
page {
  position: relative;
  width: 100vw;
  height: 100vh;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, #41b2ff 0%, #2086ff 100%);
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.menu {
  margin: 32rpx 48rpx;
  border: 1rpx solid #EEEEEE;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, .6);
}

.menu-item {
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  color: #2B2B2B;
  text-align: center;
}

.menu-item+.menu-item {
  border-top: 1rpx solid #EEEEEE;
}