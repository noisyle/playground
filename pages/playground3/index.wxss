/* pages/playground3/index.wxss */
.lottery-wrap {
	width: 600rpx;
	height: 600rpx;
	margin: 12rpx auto;
}

.lottery-wrap:after {
	content: '';
	height: 0rpx;
	width: 0rpx;
	position: absolute;
	top: 0;
	left: calc(50% - 20rpx);
	border-top: 60rpx solid #CC3333;
	border-left: 20rpx solid transparent;
	border-right: 20rpx solid transparent;
}

.lottery {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	box-sizing: border-box;
	overflow: hidden;
	position: relative;
	background-color: #330000;
	box-shadow: 0 0 15rpx #000000;
	transition: all 5s cubic-bezier(.2, .93, .43, 1);
}

.lottery-item {
	box-shadow: 0 0 1rpx #000000 inset;
	position: absolute;
	width: 300rpx;
	height: 300rpx;
	box-sizing: border-box;
	transform-origin: right bottom 0;
}

.lottery-item-wrap {
	transform-origin: center center 0;
	position: absolute;
	width: 300rpx;
	height: 300rpx;
	right: 0;
	bottom: 0;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: flex-end;
}

.lottery-item-content {
	width: 48rpx;
	font-size: 48rpx;
	font-weight: 600;
}

.lottery-action {
	margin-top: 32rpx;
	display: flex;
	justify-content: space-between;
}